<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentCategoria"
    android:background="@color/grisBackground"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.GenerosDePeliculasFragment">

    <TextView
        android:id="@+id/textViewTituloDeLaCategoria"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        android:text="@string/nombre_de_la_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_green_light"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="start"/>

    <android.support.v7.widget.RecyclerView
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/recyclerViewVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>